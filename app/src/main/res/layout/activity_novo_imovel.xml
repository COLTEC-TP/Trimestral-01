<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:id="@+id/add_imovel_View">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:id="@+id/lbl_add_nome"
        android:hint="Nome do imóvel"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_add_cidade"
        android:hint="Cidade"
        android:layout_below="@+id/lbl_add_nome"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_add_endereco"
        android:hint="Endereço"
        android:layout_below="@+id/lbl_add_cidade"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_add_telefone"
        android:hint="Telefone" 
        android:inputType="number"
        android:layout_below="@+id/lbl_add_endereco"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_add_valor"
        android:hint="Valor"
        android:layout_below="@+id/lbl_add_telefone" />
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/btn_adicionar"
        android:text="Adicionar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
