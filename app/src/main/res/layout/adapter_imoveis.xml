<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_nome"
        android:text="Nome do imovel"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_valor"
        android:text="$$$"
        android:layout_alignParentRight="true"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_endereco"
        android:text="EndereÃ§o"
        android:layout_below="@id/item_nome"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_telefone"
        android:layout_below="@id/item_endereco"
        android:text="(xx) xxxx-xxxx"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_cidade"
        android:layout_alignTop="@id/item_telefone"
        android:layout_alignParentRight="true"
        android:text="Cidade"/>

</RelativeLayout>