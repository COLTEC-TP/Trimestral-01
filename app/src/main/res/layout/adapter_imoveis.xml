<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/rel_editor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp">

        <TextView
            style="@style/Endereço"
            android:layout_alignLeft="@id/Identificação"
            android:layout_below="@id/Identificação"
            android:id="@+id/Endereço"
            android:text="Rua e bairro do imóvel" />
        <TextView
            style="@style/Identificação"
            android:id="@+id/Identificação"
            android:text="Texto para identificação do imóvel" />

        <TextView
            style="@style/Cidade"
            android:layout_alignLeft="@id/Identificação"
            android:layout_below="@id/Endereço"
            android:id="@+id/Cidade"
            android:text="Cidade onde o imóvel está localizado" />

        <TextView
            style="@style/ValorAluguel"
            android:layout_alignParentRight="true"
            android:layout_below="@id/Cidade"
            android:id="@+id/ValorAluguel"
            android:text="750BRL" />

        <TextView
            style="@style/Telefone"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/Cidade"
            android:id="@+id/Telefone"
            android:text="(xx)xxxxx-xxxx" />


    </RelativeLayout>

</RelativeLayout>