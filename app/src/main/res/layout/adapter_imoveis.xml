<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lbl_imovel_nome"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:textSize="30dp"
        android:text="@string/name"/>

    <TextView
        android:id="@+id/lbl_imovel_valor"
        android:layout_toEndOf="@+id/lbl_imovel_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"
        android:text="R$: 1000,00"/>

    <TextView
        android:id="@+id/lbl_imovel_end"
        android:layout_below="@+id/lbl_imovel_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#343563"
        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:text="Rua Roquete mendonca"/>


    <TextView
        android:id="@+id/lbl_imovel_tel"
        android:layout_toEndOf="@+id/lbl_imovel_end"
        android:layout_alignBaseline="@+id/lbl_imovel_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#343563"

        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:text="983459"/>

    <TextView
        android:id="@+id/lbl_imovel_cidade"
        android:layout_below="@+id/lbl_imovel_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#343563"

        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp"
        android:textSize="15dp"
        android:text="Belo Horizonte"/>







</RelativeLayout>
