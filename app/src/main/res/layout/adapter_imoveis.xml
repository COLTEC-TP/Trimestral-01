<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    tools:context=".Adapter">

    <TextView
        android:id="@+id/lblNomeImovel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblCidade"
        android:layout_marginTop="13dp"
        android:text="Identificação"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/lblEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblNomeImovel"
        android:layout_marginTop="11dp"
        android:text="Endereço"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/lblCidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Cidade" />

    <TextView
        android:id="@+id/lblValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblEndereco"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/lblTelefone"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/lblTelefone"
        android:text="Valor"
        android:textSize="30dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/lblTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblNomeImovel"
        android:layout_alignBottom="@+id/lblNomeImovel"
        android:layout_centerHorizontal="true"
        android:text="Telefone"
        android:textSize="20dp" />

</RelativeLayout>