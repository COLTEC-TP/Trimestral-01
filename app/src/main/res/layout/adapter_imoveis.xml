<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lbl_imovel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="nome"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/lbl_imovel_endereço"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_imovel_name"
        android:textSize="20dp"
        android:text="endereço"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_imovel_cidade"
        android:textSize="20dp"
        android:layout_below="@id/lbl_imovel_endereço"
        android:text="cidade"
        />

    <TextView
        android:id="@+id/lbl_imovel_valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/lbl_imovel_name"
        android:layout_marginEnd="19dp"
        android:text="valor"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_imovel_telefone"
        android:textSize="20dp"
        android:text="telefone"
        android:layout_below="@id/lbl_imovel_cidade"
        />


</RelativeLayout>